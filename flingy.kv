#:kivy 1.0


<AimLine>:
    canvas:
        Color:
            rgb: 1., .2, .2
        Line:
            points: [self.start_pt[0], self.start_pt[1], self.end_pt[0], self.end_pt[1]]
            dash_length: 1.
            dash_offset: 4.


<BlackHole>:
    canvas:
        Color:
            rgb: .2, .2, .2
        Ellipse:
            pos: (self.x - self.d/2, self.y - self.d/2)
            size: (self.d, self.d)
        Color:
            rgb: .1, .1, .1
        Ellipse:
            pos: (self.x - (self.d * .75)/2, self.y - (self.d * .75)/2)
            size: (self.d * .75, self.d * .75)
        Color:
            rgb: .0, .0, .0
        Ellipse:
            pos: (self.x - (self.d * .5)/2, self.y - (self.d * .5)/2)
            size: (self.d * .5, self.d * .5)

<Shot>:
    canvas:
        Color:
            rgb: .5, .5, .5
        Ellipse:
            pos: (self.x - self.d/2, self.y - self.d/2)
            size: (self.d, self.d)
